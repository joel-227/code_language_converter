<div class="container pt-5">
    <div class="row">
        <div class="col-6 min-vh-75">
            <div class="bg-code radius-top px-3 pt-2">
                <small class= <%= text_class(@translation_request.original_language) %> > <%= @translation_request.original_language.upcase %> </small>
                <i class="fas fa-arrow-right text-light small"></i>
                <small class= <%= text_class(@translation_request.converted_language) %>> <%= @translation_request.converted_language.upcase %> </small>
            </div>
           <pre class="mt-0 translation-post-request"> <code class= <%= request_highlight(@translation_request)  %> > <%= @translation_request.content %> </code></pre>
        </div>
        <div class="col-6 min-vh-75">
             <%= simple_form_for [@translation_request, @translation] do |f| %>
                <%= f.input :content, label: false,
                            input_html: { class: "form-translation", placeholder: "your code here"} %>
                <%= f.submit "Post Your Translation",
                              class: "btn btn-primary w-100 rounded-pill" %>
             <% end %>
        </div>
    </div>
</div>
