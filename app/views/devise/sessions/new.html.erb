<div class="container py-4">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4 p-5 card-shadow">


      <h2>Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password", placeholder: "******" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary mb-3 rounded-pill w-100" %>
      </div>
      <% end %>

      <%= link_to "Sign up", new_registration_path(resource_name),
          class: "btn btn-secondary mb-3 rounded-pill w-100" %>

      <%= link_to "Forgot your password?", new_password_path(resource_name),
        class: "text-center" %><br />

    </div>
  </div>
</div>
