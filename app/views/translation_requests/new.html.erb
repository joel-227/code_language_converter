
<div class="container py-5">
  <div class="row">
    <div class="col-6 offset-3 p-4 bg-light translation-form card-shadow">
      <h3 class="translation-header"> Ask for a Translation </h3>
      <p class="pb-3"> Tap on our community of savvy coders ðŸ’» </p>
      <%= simple_form_for @translation_request do |f| %>
        <%= f.select :original_language, ["Ruby", "Javascript"], include_blank: "your snippet is written in"  %>
        <%= f.select :converted_language, ["Ruby", "Javascript"], include_blank: "you need it tranlated into" %>
      <%= f.input :content , as: :text, inline_label: 'Remember me',label: false, input_html: { class: "translation-content mt-3" }  %>
      <%= f.button :submit, class: "btn btn-primary rounded-pill w-100" %>
      <% end %>
    </div>
  </div>
</div>
